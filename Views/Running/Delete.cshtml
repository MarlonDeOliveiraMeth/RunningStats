@model RunningStats.Models.RunningModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<div>
    <h4>Você tem certeza que deseja excluir?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Metros
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meters)
        </dd>
        <dt class = "col-sm-2">
            Minutos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Minutes)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RunningId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
