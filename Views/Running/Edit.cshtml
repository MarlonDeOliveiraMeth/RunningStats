@model RunningStats.Models.RunningModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="needs-validation">
            <input type="hidden" asp-for="RunningId" />
            <div class="form-group">
                <label class="control-label">Metros</label>
                <input asp-for="Meters" class="form-control" oninput="this.value = this.value.slice(0, 5)" required />
                <div class="valid-feedback">
                    Ótimo!
                </div>
                <div class="invalid-feedback">
                    Esse campo precisa ser preenchido.
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Minutos</label>
                <input asp-for="Minutes" class="form-control" oninput="if(this.value > 1440) this.value = 1440" required />
                <div class="valid-feedback">
                    Ótimo!
                </div>
                <div class="invalid-feedback">
                    Esse campo precisa ser preenchido.
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Data</label>
                <input asp-for="Date" class="form-control" required />
                <div class="valid-feedback">
                    Ótimo!
                </div>
                <div class="invalid-feedback">
                    Esse campo precisa ser preenchido.
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
